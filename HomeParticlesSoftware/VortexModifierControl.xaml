<UserControl x:Class="HomeParticlesSoftware.VortexModifierControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeParticlesSoftware"
             mc:Ignorable="d" 
               d:DesignHeight="300" d:DesignWidth="500">
    <Grid Background="#25265c" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:MinMaxFloatControl x:Name="Position" Grid.Column="0"
                                     Grid.Row="1" HorizontalAlignment="Center"/>
        <local:SliderFloatControl x:Name="MaxSpeed" Grid.Column="1" 
                                     Grid.Row="1" HorizontalAlignment="Center"/>
        <local:SliderFloatControl x:Name="Mass" Grid.Column="2" 
                                     Grid.Row="1" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
