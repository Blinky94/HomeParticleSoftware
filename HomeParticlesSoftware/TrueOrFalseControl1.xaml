<UserControl x:Class="HomeParticlesSoftware.TrueOrFalseControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeParticlesSoftware"
             mc:Ignorable="d"                       
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid Name="TrueFalseControl" Background="#25265c">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="Label" Grid.Column="0" Content="" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <ComboBox Name="ComboBox" IsEnabled="True" Width="auto" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Center"
                  HorizontalContentAlignment="Center"                                
                  Grid.Column="1" Grid.Row="0" SelectedIndex="1">
            <ComboBoxItem Name="TrueItem" Content="True"/>
            <ComboBoxItem Name="FalseItem" Content="False"/>
        </ComboBox>
    </Grid>
</UserControl>
